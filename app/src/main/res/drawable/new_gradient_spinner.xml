<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#FAFAFA" android:startColor="#FAFAFA" android:type="linear" />

                    <stroke android:width="5px" android:color="@color/grey" />

                    <corners android:radius="15dp" />

                    <padding android:bottom="10dp" android:left="10dp" android:right="15dp" android:top="10dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right" android:src="@drawable/ic_down_arrow" />
            </item>
        </layer-list>
    </item>

</selector>