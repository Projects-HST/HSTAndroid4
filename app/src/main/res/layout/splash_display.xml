<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorPrimaryDark"    android:gravity="center"    android:orientation="vertical">    <ImageView        android:layout_width="150dp"        android:layout_height="150dp"        android:src="@drawable/ic_logo_white" />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="20dp"        android:text="@string/app_name"        android:textColor="@color/white"        android:textSize="40sp"        android:textStyle="bold"        app:layout_constraintGuide_percent="0.5" /></LinearLayout>