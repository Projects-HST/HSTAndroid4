<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="238dp"
        android:layout_height="40dp"
        android:layout_x="55dp"
        android:layout_y="157dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/final_payment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/payment_success_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/payment_status_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_payment_success" />

        <TextView
            android:id="@+id/payment_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            android:text="@string/payment_success"
            android:textColor="@color/payment_success_font"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payment_status_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"

            android:gravity="center"
            android:text="@string/payment_success_comment"
            android:textColor="@color/payment_success_font"
            android:textSize="20sp" />

        <Button
            android:id="@+id/rate_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rate_service"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/alert_button_ok"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>